<h1>Listing personas</h1>

<table>
  <tr>
    <th>Apellidos y nombres</th>
    <th>Tipo documento</th>
    <th>Fecha nacimiento</th>
    <th>Situacion revista</th>
    <th>Titulo</th>
    <th>Nombre titulo</th>
    <th>Escuela</th>
    <th>Espacio curricular</th>
    <th>Fecha alta espacio curr</th>
    <th>Localidad</th>
    <th>Email</th>
    <th>Tel particular</th>
    <th>Tel laboral</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.apellidos_y_nombres %></td>
    <td><%= persona.tipo_documento_id %></td>
    <td><%= persona.fecha_nacimiento %></td>
    <td><%= persona.situacion_revista_id %></td>
    <td><%= persona.titulo_id %></td>
    <td><%= persona.nombre_titulo %></td>
    <td><%= persona.escuela_id %></td>
    <td><%= persona.espacio_curricular %></td>
    <td><%= persona.fecha_alta_espacio_curr %></td>
    <td><%= persona.localidad_id %></td>
    <td><%= persona.email %></td>
    <td><%= persona.tel_particular %></td>
    <td><%= persona.tel_laboral %></td>
    <td><%= link_to 'Show', persona %></td>
    <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
    <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

