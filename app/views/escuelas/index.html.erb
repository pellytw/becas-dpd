<h1>Listado de Escuelas</h1>

<table class="table table-striped">
  <tr>
    <th>Nombre</th>
    <th>Nro</th>
    <th>Localidad</th>
    <th>Region</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @escuelas.each do |escuela| %>
  <tr>
    <td><%= escuela.nombre %></td>
    <td><%= escuela.nro %></td>
    <td><%= escuela.localidad %></td>
    <td><%= escuela.region %></td>
    <td><%= link_to 'Ver', escuela, :class => "btn" %></td>
    <td><%= link_to 'Editar', edit_escuela_path(escuela), :class => "btn" %></td>
    <td><%= link_to 'Eliminar', escuela, method: :delete, data: { confirm: 'Seguro desea eliminar?' }, :class => "btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Escuela', new_escuela_path %>
