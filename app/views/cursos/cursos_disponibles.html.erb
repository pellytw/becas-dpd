
<form class="form-horizontal">

  <legend>Cursos Disponibles</legend>

  <% cursos_disponibles = Array.new %>
  <% cursos_disponibles = Curso.where(:disponible => true) %>
  <% cursos_disponibles.each_slice(3) do |slice| %>
    <div class="row">
      <% slice.each do |cd| %>
        <div class="span3 pagination-centered" style="background-color: #dff0d8;padding: 10px; margin:20px 55px 20px 40px;border-radius:25px;box-shadow: 10px 10px 5px #888888;">
          <%= image_tag("sello.png", :alt => "problemas con la foto", :class => "img-circle", :style => "width: 140px; height: 140px;") %>
          <% if cd.nombre.length > 20 then %>
            <h4> <%= cd.nombre[0..40] + "..." %> </h4>
          <% else %>
            <h4> <%= cd.nombre %> </h4><br/>
          <% end %>
          <% if cd.resenia.length > 20 then %>
            <p align="justify"> <b>rese単a:</b> <%= cd.resenia[0..20] + "..." %> </p>
          <% else %>
            <p align="justify"> <b>rese単a:</b> <%= cd.resenia %> </p>
          <% end %>
          <p align="justify"> <b>cupo:</b> <%= cd.cupo_inscripcion %> </p>
          <% if cd.destinatarios.length > 20 then %>
            <p align="justify"> <b>destinatarios:</b> <%= cd.destinatarios[0..20] + "..." %> </p>
          <% else %>
            <p align="justify"> <b>destinatarios:</b> <%= cd.destinatarios %> </p>
          <% end %>
          <% if cd.fechas_y_horarios.length > 20 then %>
            <p align="justify"> <b>fechas y horarios:</b> <%= cd.fechas_y_horarios[0..20] + "..." %> </p>
          <% else %>
            <p align="justify"> <b>fechas y horarios:</b> <%= cd.fechas_y_horarios %> </p>
          <% end %>
          <p><%= link_to 'Ver detalles >>', cd, :class => "btn btn-success" %></p>
        </div>
      <% end %>
    </div><br/>
  <% end %>

  <legend>Cursos Finalizados</legend>

  <% cursos_finalizados = Array.new %>
  <% cursos_finalizados = Curso.where(:finalizado => true) %>
  <% cursos_finalizados.each_slice(3) do |slice| %>
    <div class="row">
      <% slice.each do |cd| %>
        <div class="span3 pagination-centered" style="background-color: #f2dede; padding: 10px; margin:20px 55px 20px 40px;border-radius:25px;box-shadow: 10px 10px 5px #888888;">
          <%= image_tag("sello.png", :alt => "problemas con la foto", :class => "img-circle", :style => "width: 140px; height: 140px;") %>
          <% if cd.nombre.length > 20 then %>
            <h4> <%= cd.nombre[0..20] + "..." %> </h4>
          <% else %>
            <h4> <%= cd.nombre %> </h4>
          <% end %>
          <% if cd.resenia.length > 20 then %>
            <p align="justify"> <b>rese単a:</b> <%= cd.resenia[0..20] + "..." %> </p>
          <% else %>
            <p align="justify"> <b>rese単a:</b> <%= cd.resenia %> </p>
          <% end %>
          <p align="justify"> <b>cupo:</b> <%= cd.cupo_inscripcion %> </p>
          <% if cd.destinatarios.length > 20 then %>
            <p align="justify"> <b>destinatarios:</b> <%= cd.destinatarios[0..20] + "..." %> </p>
          <% else %>
            <p align="justify"> <b>destinatarios:</b> <%= cd.destinatarios %> </p>
          <% end %>
          <% if cd.fechas_y_horarios.length > 20 then %>
            <p align="justify"> <b>fechas y horarios:</b> <%= cd.fechas_y_horarios[0..20] + "..." %> </p>
          <% else %>
            <p align="justify"> <b>fechas y horarios:</b> <%= cd.fechas_y_horarios %> </p>
          <% end %>
          <p><%= link_to 'Ver detalles >>', cd, :class => "btn btn-success" %></p>
        </div>
      <% end %>
    </div><br/><br/>
    <hr/>
  <% end %>

</form>