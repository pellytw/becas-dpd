<p id="notice"><%= notice %></p>

<style type="text/css">
  .form-horizontal .control-label {
      margin-left: -10px;
  }
  .form-horizontal .controls{
      margin-right: 30px;
  }
  h4,h6{
    margin: 0px;
    padding: 0px;
  }
  .controls {
    padding-top: 5px;
  }
  .cuadro {
    background: #EFFBFB;
    border:1px solid;
    border-radius:2em;
    border-color: #A9E2F3;
    padding-left: 10px;
  }
  .logo {
    text-align:center;
    padding-top:10px; 
  }
</style>

<div class="cuadro">

<form class="form-horizontal">

  <div class="logo"><p><%=link_to image_tag("sello.png")%></p></div>

  <div class="row">
    <div class="span12">
      <h4 style="margin-top:20px;margin-bottom:20px;text-align:center;"><%= @curso.nombre %></h4>
    </div>
  </div>  

  <div class="row">
    <div class="span6">
      <div class="control-group info">
        <label class="control-label"><strong>Institución oferente:</strong></label>
        <div class="controls">
          <%= @curso.institucion_oferente %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Lugar geográfico:</strong></label>
        <div class="controls">
          <%= @curso.localidad %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Lugar de realización:</strong></label>
        <div class="controls">
          <%= @curso.lugar_de_realizacion %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Descripción:</strong></label>
        <div class="controls">
          <%= @curso.resenia %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Fechas y horarios:</strong></label>
        <div class="controls">
          <%= @curso.fechas_y_horarios %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Capacitadores:</strong></label>
        <div class="controls">
          <%= @curso.capacitadores %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Destinatarios:</strong></label>
        <div class="controls">
          <%= @curso.destinatarios %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Carga horaria presencial:</strong></label>
        <div class="controls">
          <%= @curso.carga_horaria_presencial %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Carga horaria no presencial:</strong></label>
        <div class="controls">
           <%= @curso.carga_horaria_no_presencial %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Teléfono de contacto:</strong></label>
        <div class="controls">
          <%= @curso.institucion_oferente.telefono %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Correo electrónico:</strong></label>
        <div class="controls">
           <%= @curso.institucion_oferente.email %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span3">
      <div class="control-group info">
        <label class="control-label"><strong>Calle:</strong></label>
        <div class="controls">
          <%= @curso.institucion_oferente.calle %>
        </div>
      </div>
    </div>
    <div class="span3">
      <div class="control-group info">
        <label class="control-label"><strong>Nro:</strong></label>
        <div class="controls">
           <%= @curso.institucion_oferente.nro_calle %>
        </div>
      </div>
    </div>
    <div class="span2">
      <div class="control-group info">
        <label class="control-label"><strong>Piso:</strong></label>
        <div class="controls">
          <%= @curso.institucion_oferente.piso %>
        </div>
      </div>
    </div>
    <div class="span2">
      <div class="control-group info">
        <label class="control-label"><strong>Depto:</strong></label>
        <div class="controls">
           <%= @curso.institucion_oferente.depto %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Localidad:</strong></label>
        <div class="controls">
          <%= @curso.localidad_id %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div class="control-group info">
        <label class="control-label"><strong>Número de expediente:</strong></label>
        <div class="controls">
          <%= @curso.nro_expediente %>
        </div>
      </div>
    </div>
  </div>

</form>
</div>

</br>

<% if @curso.disponible %>
  <button class="btn btn-success" onclick="location.href='<%=url_for :controller => "personas", :action => "new", :idCurso => @curso.id %>'">Inscribirse</button> |
<% end %>
 

<% if user_signed_in? %>
  <%= link_to 'Atrás', cursos_path, :class => "btn btn-primary" %>
<% else %>
  <%= link_to 'Atrás', cursos_cursos_disponibles_path, :class => "btn btn-primary" %>
<% end %>
