<h1>Listado de instituciones oferentes</h1>

<table class="table table-striped">
  <tr>
    <th>Nombre</th>
    <th>Telefono</th>
    <th>Email</th>
    <th>Lugar geografico</th>
    <th>Calle</th>
    <th>Nro calle</th>
    <th>Piso</th>
    <th>Depto</th>
    <th></th>
  </tr>

<% @institucion_oferentes.each do |institucion_oferente| %>
  <tr>
    <td><%= institucion_oferente.nombre %></td>
    <td><%= institucion_oferente.telefono %></td>
    <td><%= institucion_oferente.email %></td>
    <td><%= institucion_oferente.lugar_geografico_id %></td>
    <td><%= institucion_oferente.calle %></td>
    <td><%= institucion_oferente.nro_calle %></td>
    <td><%= institucion_oferente.piso %></td>
    <td><%= institucion_oferente.depto %></td>
    <td>
      <div class="btn-group">
        <a class="btn dropdown-toggle btn-primary" data-toggle="dropdown" href="#">
          Acciones
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Ver', institucion_oferente %></li>
          <li><%= link_to 'Editar', edit_institucion_oferente_path(institucion_oferente) %></li>
          <li><%= link_to 'Eliminar', institucion_oferente, method: :delete, data: { confirm: 'Seguro desea eliminar?' } %></li>
          </li>
        </ul>
      </div>
    </td>
  </tr>
<% end %>
</table>

